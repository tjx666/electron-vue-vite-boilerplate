{
    "name": "app",
    "version": "0.0.0",
    "productName": "electron-vue-vite-boilerplate",
    "main": "src/main/dist/index.js",
    "scripts": {
        "start": "cross-env DEV_MODE=development concurrently -r -i --kill-others-on-fail npm:start:renderer npm:start:main",
        "start:main": "cross-env DEV_MODE=development tsx ./scripts/start-main.ts",
        "start:renderer": "cross-env DEV_MODE=development vite serve ./src/renderer",
        "build:main": "tsx ./scripts/build-main.ts",
        "build:renderer": "vite build ./src/renderer",
        "serve": "vite preview",
        "build:app": "tsx ./scripts/pack.ts",
        "build:win": "pnpm install && tsx ./scripts/pack.ts",
        "type-check": "vue-tsc -b"
    },
    "dependencies": {
        "ant-design-vue": "^4.1.0",
        "chalk": "^5.3.0",
        "dateformat": "^5.0.3",
        "dotenv": "^16.3.1",
        "electron-localshortcut": "^3.2.1",
        "electron-log": "^5.0.3",
        "fs-extra": "^11.2.0",
        "got": "^14.0.0",
        "is-online": "^10.0.0",
        "p-queue": "^8.0.1",
        "semver": "^7.5.4",
        "strip-ansi": "^7.1.0",
        "sudo-prompt": "^9.2.1",
        "vue": "^3.4.5"
    },
    "devDependencies": {
        "@types/dateformat": "^5.0.2",
        "@types/electron-localshortcut": "^3.1.3",
        "@types/fs-extra": "^11.0.4",
        "@types/semver": "^7.5.6",
        "@vitejs/plugin-vue": "^5.0.2",
        "electron": "^28.1.1",
        "electron-builder": "^24.9.1",
        "enquirer": "^2.4.1",
        "esbuild": "0.19.11",
        "execa": "^8.0.1",
        "rimraf": "^5.0.5",
        "type-fest": "^4.9.0",
        "vite": "^5.0.11",
        "vue-router": "^4.2.5",
        "vue-tsc": "^1.8.27"
    },
    "build": {
        "appId": "org.ytj.electron-vue-vite-boilerplate",
        "files": [
            "node_modules/",
            "!**/node_modules/**/{license,LICENSE,license.md,LICENSE.md}",
            "!**/node_modules/**/{history,HISTORY,history.md,HISTORY.md}",
            "!**/node_modules/**/{readme,README,readme.md,README.md}",
            "!**/node_modules/**/*.{test,spec}.js",
            "!**/node_modules/**/*.ts",
            "src/main/dist/",
            "src/preload/dist/",
            "src/renderer/dist/",
            "package.json"
        ],
        "directories": {
            "app": "./"
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": "dmg"
        },
        "win": {
            "target": "nsis",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
