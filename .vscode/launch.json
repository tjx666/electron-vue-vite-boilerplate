{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "App: Main",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "compileForDebugAppMain",
            "cwd": "${workspaceFolder}/packages/app",
            "env": {
                "DEV_MODE": "true"
            },
            "runtimeExecutable": "${cwd}/node_modules/.bin/electron",
            "args": ["."],
            "windows": {
                "runtimeExecutable": "${cwd}/node_modules/.bin/electron.cmd"
            },
            "outputCapture": "std",
            "sourceMaps": true
        }
    ]
}
