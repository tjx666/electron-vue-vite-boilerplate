{
    "css.validate": false,
    "scss.validate": false,
    "stylelint.validate": ["css", "vue"],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "json",
        "html",
        "markdown"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    "search.exclude": {
        "**/dist": true,
        "pnpm-lock.yaml": true
    },
    "logViewer.watch": [
        {
            "title": "Mac Main",
            "pattern": "${userHome}/Library/Logs/electron-vue-vite-boilerplate/main.log"
        },
        {
            "title": "Win Main",
            "pattern": "${userHome}/AppData/Roaming/electron-vue-vite-boilerplate/logs/main.log"
        },
        {
            "title": "Linux Main",
            "pattern": "${userHome}/.config/electron-vue-vite-boilerplate/logs/main.log"
        }
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
