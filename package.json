{
    "name": "electron-vue-vite-boilerplate",
    "version": "1.0.0",
    "private": true,
    "keywords": [
        "electron",
        "vue",
        "vite",
        "boilerplate",
        "templet"
    ],
    "lint-staged": {
        "*.{ts,vue,js}": [
            "eslint -c .eslintrc.js",
            "format-imports --config .vscode/import-sorter.json"
        ],
        "*.{vue,css,less,scss}": [
            "stylelint --config .stylelintrc.json"
        ],
        "*.{ts,vue,json,js,css,less,scss,md,svg}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "main": "pnpm start:main --filter app",
        "renderer": "pnpm start:renderer --filter app",
        "app": "pnpm start --filter app",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/jest": "27.4.0",
        "@types/node": "17.0.15",
        "@types/svgo": "2.6.1",
        "@typescript-eslint/eslint-plugin": "5.10.2",
        "@typescript-eslint/parser": "5.10.2",
        "chalk": "4.1.2",
        "concurrently": "7.0.0",
        "cross-env": "7.0.3",
        "eslint": "8.8.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-promise": "6.0.0",
        "eslint-plugin-vue": "8.4.1",
        "execa": "5.1.1",
        "format-imports": "2.4.1",
        "husky": "7.0.4",
        "jest": "27.5.0",
        "lint-staged": "12.3.3",
        "postcss": "8.4.6",
        "postcss-html": "1.3.0",
        "postcss-less": "6.0.0",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "stylelint": "14.3.0",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-config-recess-order": "3.0.0",
        "stylelint-config-recommended-vue": "1.1.0",
        "stylelint-config-standard": "24.0.0",
        "stylelint-declaration-block-no-ignored-properties": "2.5.0",
        "ts-jest": "27.1.3",
        "ts-node": "10.4.0",
        "typescript": "4.5.5"
    }
}
